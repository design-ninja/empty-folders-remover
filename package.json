{
  "name": "empty-folders-remover",
  "displayName": "Empty Folders Remover",
  "version": "1.3.0",
  "description": "VS Code extension to remove empty folders",
  "icon": "icon.png",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "pnpm run compile && vsce package",
    "publish": "vsce publish",
    "test": "mocha"
  },
  "contributes": {
    "commands": [
      {
        "command": "empty-folders-remover.removeEmptyFolders",
        "title": "Remove Empty Folders"
      }
    ],
    "configuration": {
      "title": "Empty Folders Remover",
      "properties": {
        "emptyFoldersRemover.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".git",
            ".vscode",
            "node_modules",
            ".npm",
            ".yarn",
            "dist",
            "build",
            ".next",
            ".nuxt",
            "coverage",
            "__pycache__",
            ".pytest_cache",
            ".mypy_cache"
          ],
          "description": "Folder patterns to exclude from scanning. Supports wildcards (*)"
        },
        "emptyFoldersRemover.maxConcurrency": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of folders to process concurrently"
        },
        "emptyFoldersRemover.dryRun": {
          "type": "boolean",
          "default": false,
          "description": "Preview mode: show what would be removed without actually deleting folders"
        },
        "emptyFoldersRemover.showProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed progress information during the operation"
        }
      }
    }
  },
  "keywords": [
    "empty-folders",
    "cleanup",
    "remove-empty",
    "folders",
    "directory",
    "clean",
    "remove",
    "empty",
    "maintenance",
    "organize",
    "cleaner",
    "filesystem",
    "workspace",
    "project-structure",
    "productivity"
  ],
  "author": {
    "name": "lirik"
  },
  "license": "ISC",
  "publisher": "lirik",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/design-ninja/empty-folders-remover.git"
  },
  "bugs": {
    "url": "https://github.com/design-ninja/empty-folders-remover/issues"
  },
  "activationEvents": [],
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.1",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.5.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}